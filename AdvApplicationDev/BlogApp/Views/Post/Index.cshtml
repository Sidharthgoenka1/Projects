@model List<BlogApp.Models.Post>

<h2>Blog Posts</h2>
<a href="@Url.Action("Create", "Post")" class="btn btn-primary">Create Post</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Actions</th> <!-- Added Actions column -->

        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Id</td>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    <a href="@Url.Action("View", "Post", new { id = post.Id })" class="btn btn-info">
				View
			   </a>
                </td> <!-- Added View button -->

            </tr>
        }
    </tbody>
</table>
