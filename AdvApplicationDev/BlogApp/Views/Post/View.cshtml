@model BlogApp.Models.ViewPostViewModel


<div class="row">
    <div class="col-md-3">
    <h4>Blog Posts</h4>
    <ul class="list-group">
        @foreach (var post in Model.Posts)
        {
            <li class="list-group-item">
                <a href="@Url.Action("View", "Post", new { id = post.Id })">@post.Title</a>
            </li>
        }
    </ul>
</div>
<div class="col-md-9">
    @if (Model.SelectedPost != null)
    {
        <h2>@Model.SelectedPost.Title</h2>
        <p>@Model.SelectedPost.Content</p>
    }
</div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
    @if (Model.HasPrevious)
    {
        <a href="@Url.Action("View", "Post", new { id = Model.PreviousPost.Id })" class="btn btn-primary">Previous</a>
    }
    @if (Model.HasNext)
    {
        <a href="@Url.Action("View", "Post", new { id = Model.NextPost.Id })" class="btn btn-primary">Next</a>
    }
</div>
</div>


