@model TestMVCProj.Models.Book

<h2>Create Book</h2>

<form asp-controller="Book" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId"></label>
        <input asp-for="AuthorId" class="form-control" />
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LibraryBranchId"></label>
        <input asp-for="LibraryBranchId" class="form-control" />
        <span asp-validation-for="LibraryBranchId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="margin: 10px;">Submit</button>
</form>
